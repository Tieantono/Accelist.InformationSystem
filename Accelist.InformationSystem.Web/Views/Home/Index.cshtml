@model Accelist.InformationSystem.APILayer.Models.ViewModels.LoginModel

@{
    ViewBag.Title = "Home Page";
}

@section Styles{
    <link href="~/Content/AccelistInformationSystem.css" type="text/css" rel="stylesheet" />

}

<div class="container">
    <div class="login-container">
        <h2 class="login-header"><strong>Login</strong></h2>
        <form class="form-horizontal" action="@Url.Action("Login", "Account")" method="post">
            <div class="form-group">
                @Html.LabelFor(Q => Q.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(Q => Q.Email, new { @class = "form-control" })
                </div>
                <div>
                    @Html.ValidationMessageFor(Q => Q.Email, "", new { @class = "error-msg" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Q => Q.Password, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(Q => Q.Password, new { @class = "form-control" })
                </div>
                <div>
                    @Html.ValidationMessageFor(Q => Q.Password, "", new { @class = "error-msg" })
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block">
                Login
            </button>
        </form>
        <div class="register-link">
            New Employee? Click @Html.ActionLink("Here", "Register", "Account")
        </div>
    </div>
</div>