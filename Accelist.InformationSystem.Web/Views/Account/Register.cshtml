@model Accelist.InformationSystem.APILayer.Models.ViewModels.RegisterModel

@{
    ViewBag.Title = "Register";
}

@section styles{
    <link href="~/Content/AccelistInformationSystem.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/AccelistInformationSystem.js" type="text/javascript"></script>
}

<h2>Registration</h2>

<div id="registrationForm" class="container">
    <div class="col-md-2">
    </div>

    <div class="col-md-10 register-container">
        <form class="form-horizontal">
            <div id="personalForm">
                <h2 class="register-sub-header"><strong>Personal Data</strong></h2>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.EmployeeId, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Q => Q.EmployeeId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.EmployeeId, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.EmployeeName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Q => Q.EmployeeName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.EmployeeName, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.IdValidDate, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Q => Q.IdValidDate, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.IdValidDate, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Gender, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(Q => Q.Gender, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <span class="col-sm-2 control-label">
                        <strong>Do you have Jamsostek?</strong>
                    </span>
                    <div class="col-sm-5 checkbox">
                        <label>
                            Yes
                            @Html.RadioButtonFor(Q => Q.Jamsostek, true)
                        </label>
                    </div>
                    <div class="col-sm-5 checkbox">
                        <label>
                            No
                            @Html.RadioButtonFor(Q => Q.Jamsostek, false)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Academic, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(Q => Q.Academic, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.BloodType, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(Q => Q.BloodType, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="BirthPlace" class="col-sm-2 control-label">
                        Birth Place
                    </label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(Q => Q.BirthPlace, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.BirthPlace, "", new { @class = "error-msg" })
                    </div>
                    <label for="BirthDate" class="col-sm-2 control-label col-sm-pull-1">
                        & Date
                    </label>
                    <div class="col-sm-4 col-sm-pull-1">
                        @Html.TextBoxFor(Q => Q.BirthDate, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.BirthDate, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.LastAcademic, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(Q => Q.LastAcademic, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Address, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(Q => Q.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.Address, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.CurrentAddress, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(Q => Q.CurrentAddress, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.CurrentAddress, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.MobilePhone, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Q => Q.MobilePhone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.MobilePhone, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Phone, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Q => Q.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.Phone, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Email, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Q => Q.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.Email, "", new { @class = "error-msg" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Religion, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(Q => Q.Religion, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="SiblingNumber" class="col-sm-1 control-label col-sm-offset-1">
                        The 
                    </label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(Q => Q.SiblingNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.SiblingNumber, "", new { @class = "error-msg" })
                    </div>
                    <label for="TotalSibling" class="col-sm-3 control-label col-sm-pull-2">
                        Child From
                    </label>
                    <div class="col-sm-3 col-sm-pull-2">
                        @Html.TextBoxFor(Q => Q.TotalSibling, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Q => Q.TotalSibling, "", new { @class = "error-msg" })
                    </div>
                    <label for="TotalSibling" class="col-sm-2 control-label col-sm-pull-3">
                        Sibling(s)
                    </label>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Status, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(Q => Q.Status, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.StatusChange, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(Q => Q.StatusChange, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Q => Q.Citizenship, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EnumDropDownListFor(Q => Q.Citizenship, new { @class = "form-control" })
                    </div>
                </div>
                
                <button id="mainFamilyBtn" type="button" class="btn btn-default col-sm-offset-11">
                    Next
                </button>
            </div>

            <div id="mainFamilyForm">
                @Html.Partial("~/Views/Shared/PartialView/_MainFamilyForm.cshtml")
            </div>
            
            <div id="biologicalFamilyForm" class="form-group">
                @Html.Partial("~/Views/Shared/PartialView/_BiologicalFamilyForm.cshtml")
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}