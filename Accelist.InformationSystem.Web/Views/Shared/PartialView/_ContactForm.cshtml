@model Accelist.InformationSystem.APILayer.Models.ViewModels.RegisterModel

<div class="panel panel-default panel-align">
    <div class="panel-heading" style="background-color: white">
        <div class="panel-title panel-title-blue">
            <h2>
                <strong>Contact Data</strong>
            </h2>
        </div>
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(Q => Q.Address, new { @class = "col-sm-4 control-label" })
            <div class="col-sm-8">
                @Html.TextAreaFor(Q => Q.Address, new { @id="addressTextarea", @class = "form-control address-textarea" })
                @Html.ValidationMessageFor(Q => Q.Address, "", new { @class = "error-msg" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                @Html.LabelFor(Q => Q.CurrentAddress, "Current Address:", new { @class = "control-label" })
                <div>
                    <label style="font-weight:lighter;margin-bottom: 0">
                        @Html.RadioButtonFor(Q => Q.CurrentAddress, "same")
                        Same as KTP
                    </label>
                </div>
                <div>
                    <label style="font-weight:lighter;margin-bottom: 0">
                        @Html.RadioButtonFor(Q => Q.CurrentAddress, "new")
                        New
                    </label>
                </div>
            </div>
            <div id="currentAddressTextarea" class="col-sm-8">
                @Html.TextAreaFor(Q => Q.CurrentAddress, new { @class = "form-control address-textarea", @disabled = "disabled" })
                @Html.ValidationMessageFor(Q => Q.CurrentAddress, "", new { @class = "error-msg" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Q => Q.MobilePhone, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(Q => Q.MobilePhone, new { @class = "form-control" })
                @Html.ValidationMessageFor(Q => Q.MobilePhone, "", new { @class = "error-msg" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Q => Q.Email, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(Q => Q.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(Q => Q.Email, "", new { @class = "error-msg" })
            </div>
        </div>
    </div>
</div>