@model List<Accelist.InformationSystem.APILayer.Models.EmployeeTemp>

@section styles{
    <link href="~/Content/AccelistInformationSystem.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/AccelistInformationSystem.js" type="text/javascript"></script>
}

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>
<div id="employeeListPage" class="container">
    <div class="row">
        <form class="form-horizontal" action="@Url.Action("EmployeeList", "Employee")" method="get">
            <div class="form-group">
                <label class="control-label col-sm-2" for="searchEmployeeTextBox">
                    Search Employee:
                </label>
                <div class="col-sm-8">
                    <input id="searchEmployeeTextBox" type="text" name="employeeName" class="form-control" />
                </div>
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">
                        Search
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        @{
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Employee Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                @foreach (var employee in Model)
                {
                    <tr class="dataRow">
                        <td class="testColumn"></td>
                        <td>
                            @employee.EmployeeName
                        </td>
                        <td>
                            <a href="/Employee/EditEmployee?employeeId=@employee.EmployeeId" class="btn btn-primary">
                                Edit
                            </a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger deleteEmployeeBtn" value="@employee.EmployeeId">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>


    @*EmployeeTemp Registration Link Button*@
    <div class="row">
        <a href="@Url.Action("RegisterEmployeeTemp", "Account")" class="btn btn-default" role="button">
            EmployeeTemp Registration
        </a>
    </div>
</div>